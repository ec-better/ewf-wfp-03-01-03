<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="application">
  <jobTemplates>
    <jobTemplate id="framing_up">
      <streamingExecutable>/application/framing_up/run</streamingExecutable>
       <defaultParameters>
           <parameter id='_T2Username' title='Username' abstract='Username' scope="runtime"></parameter>
           <parameter id='_T2ApiKey' title='API key' abstract='API key' scope="runtime"></parameter>
           <parameter id='input_endpoint' title='Input endpoint' abstract='Data pipeline to select input products from' scope="runtime"></parameter>
           <parameter id='series_start_date' title='Series startdate' abstract='sereies startdate in YYYY-mm-ddTHH:MM:SSZ format' scope="runtime"></parameter>
           <parameter id='series_enddate' title='Series enddate' abstract='sereies enddate in YYYY-mm-ddTHH:MM:SSZ format' scope="runtime"></parameter>
           <parameter id='tile_level' title='Tiling level' abstract='Tiling level' scope="runtime"></parameter>
           <parameter id='tile_column' title='Tile column' abstract='Tile column' scope="runtime"></parameter>
           <parameter id='tile_row' title='Tile row' abstract='Tile row' scope="runtime"></parameter>
           <parameter id='track' title='Product track' abstract='Product track 3-zero-padded (i.e. 007 or 025 or 135)' scope="runtime"></parameter>
       </defaultParameters>
       <defaultJobconf>
    	<property id="ciop.job.max.tasks">1</property>
        <property id="mapred.task.timeout">9900000000</property>
       </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="filtering">
      <streamingExecutable>/application/filtering/run</streamingExecutable>
        <defaultParameters>
            <parameter id='_T2Username' title='Username' abstract='Username' scope="runtime">ppishehvar</parameter>
            <parameter id='_T2ApiKey' title='API key' abstract='API key' scope="runtime"></parameter>
            <parameter id='delta_time_output' title='Ouput Delta Day' abstract='Delta Day for interpolated results' scope="runtime"></parameter>
       </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">9900000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
    <workflow id="ewf-wfp-03-01-03" title="Smoothed and gap-filled Sentinel-3 OLCI Level-2 Land Products" abstract="Smoothed and gap-filled Sentinel-3 OLCI Level-2 Land Products">
    <workflowVersion>1.0</workflowVersion>
    <node id="node_framing">
      <job id="framing_up"/>
      <sources>
        <!--source id="source" title="Sentinel-3 A|B OLCI Level-2 full resolution products" abstract="List of comma-separated Sentinel-3 A|B OLCI Level-2 OL_2_LFR" refid="string:list" scope="runtime"></source-->
        <source id="source" title="dummy source" abstract="dummy" refid="string:list" scope="test">dummy</source>
      </sources>
    </node>
    <node id="node_filtering">
      <job id="filtering"/>
      <sources>
        <source refid="wf:node">node_framing</source>
      </sources>
    </node>
  </workflow>
</application>
